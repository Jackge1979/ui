{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "outDir": "lib",
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "lib": ["ES2015.Iterable"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test*"],
  "paths": {
    "lodash/*": ["node_modules/@types/lodash-es/*"]
  }
}
